
<%= form_for @article, url: @article, html: { multipart: true } do |form| %>
  <div>
    <%= form.label :Tittle %><br>
    <%= form.text_field :Tittle %>
    <% article.errors.full_messages_for(:Tittle).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %><br>
    <% article.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

   <div>
     <%= form.fields_for :pictures, form.object.pictures.build do |f| %>
        <!-- , form.object.picture -->
        <%= f.label :image %><br>
        <%= f.file_field :image%>
      <%end %>
  </div>
  <br>
  <div>
    <%= form.submit %>
  </div>
<% end %>
