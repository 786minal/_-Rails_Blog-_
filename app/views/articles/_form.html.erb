
<%= form_for @article, url: @article, html: { multipart: true } do |form| %>
  <div>
    <%= form.label :Tittle %><br>
    <%= form.text_field :Tittle %>
    <% article.errors.full_messages_for(:Tittle).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %><br>
    <% article.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
 <div>
    <%= form.label :image %><br>
    <%= form.file_field :image %><br>
  </div>
  <br>
  <div>
    <%= form.submit %>
  </div>
<% end %>
