   <table border="10">
      
      <tr>
        <th>
          <h2>Title</h2>
        </th>
        <th>
          <h2>User</h2>
        </th>
        <th>&nbsp&nbsp&nbsp&nbsp </th>
        <th>&nbsp&nbsp&nbsp&nbsp</th>
        <th>&nbsp&nbsp&nbsp&nbsp</th>
      </tr>
     <% articles.each do |article| %>
     <!-- here at articles.each we didn't write @articles because in index.html.erb we have already initialize it with  articles: @articles  -->
       <tr>
        <td>
         <%= link_to article.Tittle, article %>
        </td>
       <td>
         
          <%#= image_tag @article.image.url(:medium) %>
          <%= image_tag article.image.url(:thumb) %>
        </td>
        <td> <%= article.user.email%></td>
          <%if article.user.email==current_user.email %>
          <td><%= link_to "Edit", edit_article_path(article) %></td>
          <td><%= link_to "Destroy", article_path(article),
          method: :delete,
          data: { confirm: "Are you sure?" } %></td>
          <% else %>
          <td></td>
          <td></td>
          <%end%>
       </tr>
     <% end %>
    </table>
    <br>

      <%= link_to "New Article", new_article_path %>
    <%= will_paginate @article %>
