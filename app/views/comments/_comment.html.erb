<div class="comments">

  <div class="comment-rating" data-score="<%= comment.rating %>"></div>

  <p class="comments-description"><%= comment.description %></p>
  
<% if user_signed_in? %>
    <% if comment.user_id == current_user.id %>

      <div class="links btn-group">

         <%= link_to 'Destroy Comment', [comment.article, comment], remote: true, class:"btn btn-custom",
              method: :delete,
              data: { confirm: "Are you sure?" } %>

      </div>
    
    <% end %> 
  <% end %>
</div>

